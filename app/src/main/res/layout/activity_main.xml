<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/eNumberOfQuestions"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="0/100"
        android:textAlignment="viewEnd"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/eScore"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

    <TextView
        android:id="@+id/eScore"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Score: "
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="380dp"
        android:layout_height="187dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <Button
        android:id="@+id/bAnswer1"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

    <Button
        android:id="@+id/bAnswer2"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/bAnswer1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bAnswer1"
        app:layout_constraintTop_toBottomOf="@+id/bAnswer1" />

    <Button
        android:id="@+id/bAnswer3"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/bAnswer2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bAnswer2"
        app:layout_constraintTop_toBottomOf="@+id/bAnswer2" />

    <Button
        android:id="@+id/bAnswer4"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:text="Button"
        android:textAllCaps="false"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/bAnswer3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bAnswer3"
        app:layout_constraintTop_toBottomOf="@+id/bAnswer3" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

</androidx.constraintlayout.widget.ConstraintLayout>